<li id="<%= feed_item.id %>">
  <b class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </b>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
    Posted <b><%= time_ago_in_words(feed_item.created_at) %></b> ago.
  </span>
  <span>
    <% if current_user?(feed_item.user) %>
      <%= link_to "", feed_item, method: :delete, title: feed_item.content,  class: 'fa fa-times' %>
    <% end %>
  </span>
</li>