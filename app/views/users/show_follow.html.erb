<% provide(:title, "Friends") %>

<div class="tile users">
  <h3>Friends:</h3>
  <% if @users.any? %>
    <div class="user_avatars">
      <% @users.each do |user| %>
        <% if user.avatar? %>
          <%= link_to image_tag(user.avatar.url(:thumb)), user, class: "small-avatar" %>
        <% else %>
          <%= link_to image_tag("default_user.jpg"), user, class: "small-avatar" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <%= will_paginate @users, class: "users_pagin" %>
</div>