<%= provide(:title, @user.name) %>

<% if signed_in? %>

  <div class="tile profile">
    <%= render 'shared/user_info' %>
    <%= render 'shared/stats' %>
  </div>

<% end %>

<% if @user.microposts.any? %>
  <div class="tile current_user_posts">
    <ol class="microposts">
        <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  </div>
<% end %>
